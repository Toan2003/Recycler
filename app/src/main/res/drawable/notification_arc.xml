<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="10dp"
        android:gravity="end">
        <bitmap
            android:src="@drawable/forest"
            android:gravity="top" />
    </item>

    <item
        android:top="10dp"
        android:gravity="start">
        <bitmap
            android:src="@drawable/wavy_tree"
            android:gravity="top" />
    </item>

    <item
        android:bottom="-100dp"
        android:left="-250dp"

        android:right="-250dp"
        android:top="60dp">

        <shape
            android:shape="oval">
            <solid android:color="#F5FFF5" />

        </shape>
    </item>
</layer-list>