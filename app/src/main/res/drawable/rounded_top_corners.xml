<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="60dp"
        android:height="60dp"
        android:drawable="@drawable/trees"
        android:gravity="top|left"
        android:left="0dp"
        android:top="0dp" />
    <item
        android:width="60dp"
        android:height="60dp"
        android:drawable="@drawable/trees"
        android:gravity="top|right"
        android:right="0dp"
        android:top="0dp"
        />
    <item>
        <shape>
            <corners
                android:topLeftRadius="128dp"
                android:topRightRadius="128dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="@color/white_background" />
        </shape>
    </item>
</layer-list>