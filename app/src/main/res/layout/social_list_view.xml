<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagesocial"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/img"
            android:background="@drawable/rounded_rectangle"/>
        <TextView
            android:id="@+id/titlesocial"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="How to go green"
            style="@style/SmallBoldFont"/>
        <TextView
            android:id="@+id/contentSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Living a more sustainable and environmentally-friendly life is becoming increasingly important as we face pressing environmental challenges."
            />
    </LinearLayout>
</LinearLayout>